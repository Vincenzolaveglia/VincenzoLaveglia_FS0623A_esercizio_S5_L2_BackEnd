@{
    ViewData["Title"] = "Pagamenti";
}

<h2>Pagamenti</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Periodo</th>
            <th>Totale</th>
            <th>Tipo Pagamento</th>
            <th>ID Dipendente</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pagamento in Model)
        {
            <tr>
                <td>@pagamento.Periodo</td>
                <td>@pagamento.Totale</td>
                <td>@pagamento.TipoPagamento</td>
                <td>@pagamento.DipendenteId</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Pagamento" asp-action="Add" class="btn btn-primary">Aggiungi Pagamento</a>
